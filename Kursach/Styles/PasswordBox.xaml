<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:material="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="clr-namespace:ISTraining_Part.UI">

    <Style TargetType="PasswordBox" BasedOn="{StaticResource MaterialDesignFloatingHintPasswordBox}" x:Key="MaterialPasswordBox">
        <Setter Property="material:HintAssist.IsFloating" Value="True"/>
        <Setter Property="material:HintAssist.Hint" Value="密码"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="ui:BoundPasswordBox.Attach" Value="True"/>
    </Style>

</ResourceDictionary>